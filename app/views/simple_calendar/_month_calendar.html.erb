<div class="simple-calendar">
  <div class="calendar-heading" style="text-align: center; margin: 10px;">
    <%= link_to t('simple_calendar.previous', default: 'PRE'), calendar.url_for_previous_view, class: "btn btn-light" %>
    <span class="calendar-title"><strong><%= t('date.month_names')[start_date.month] %> <%= start_date.year %></strong></span>
    <%= link_to t('simple_calendar.next', default: 'NEXT'), calendar.url_for_next_view, class: "btn btn-light" %>
    <span style="margin-left: 200px">
      <%= link_to "New Event", new_event_path , class: "btn btn-danger"%> 
    </span>
  </div>

  <table class="table table-striped">
    <thead>
      <tr>
        <% date_range.slice(0, 7).each do |day| %>
          <th><%= t('date.abbr_day_names')[day.wday] %></th>
        <% end %>
      </tr>
    </thead>

    <tbody>
      <% date_range.each_slice(7) do |week| %>
        <tr>
          <% week.each do |day| %>
            <%= content_tag :td, class: calendar.td_classes_for(day) do %>
                <% block.call day.strftime("%d"), sorted_events.fetch(day, []) %>
            <% end %>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
