<div class="notes-form-container">
<%= simple_form_for(@favorite) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>


  <div class="form-inputs">
  <div class="field">
    <%= f.label :name %>
    <br>
     <%= f.text_field :name %>
   </div>
  <div class="field">
    <%= f.label :url %>
    <br>
     <%= f.text_field :url %>
   </div>
  </div>

  <div class="form-actions">
  <%= f.button :submit %>
  </div> <br>
  <%= link_to 'Back', favorites_path, class: "btn submitDark" %>

<% end %>
</div>




